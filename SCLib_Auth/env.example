# SCLib Authentication Server Environment Configuration
# Copy this file to .env and update the values

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# MongoDB Configuration
MONGO_URL=mongodb://mongo:27017
DB_NAME=SCLib_Test
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# Auth0 Configuration (optional - for Auth0 integration)
AUTH0_DOMAIN=your-domain.auth0.com
AUTHO_CLIENT_ID=your-client-id
AUTHO_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=your-api-audience

# Server Configuration
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO

# Redis Configuration (optional - for session storage)
REDIS_URL=redis://redis:6379

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
MAX_REQUEST_SIZE=100MB

# Development Configuration
DEBUG=false
RELOAD=false
